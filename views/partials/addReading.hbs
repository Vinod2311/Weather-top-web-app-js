<form class="ui segment equal width form" action="/stations/{{../station.id}}/addReading" method="POST">
  <h3 class="ui dividing header">Add new Reading</h3>
  <div class="three fields">
    <div class="field">
      <label>Code</label>
      <select class="ui fluid dropdown" name="code">
        <option>100</option>
        <option>200</option>
        <option>300</option>
        <option>400</option>
        <option>500</option>
        <option>600</option>
        <option>700</option>
        <option>800</option>
      </select>
    </div>
    <div class="field">
      <label>Temperature (<span>&#176;</span>C)</label>
      <input placeholder="Temperature" type="number" step="0.1" min="-50" max="70" name="temperature" required>
    </div>
    <div class="field">
      <label>Wind Speed (km/hr)</label>
      <input placeholder="Wind Speed" type="number" step="0.1" min="0" max="117" name="windSpeed" required>
    </div>
  </div>
  <div class="two fields">
    <div class="field">
      <label>Wind Direction (<span>&#176;</span>)</label>
      <input placeholder="Wind Direction" type="number" step="0.1" min="0" max="360" name="windDirection" required>
    </div>
    <div class="field">
      <label>Pressure (mbar)</label>
      <input placeholder="Pressure" type="number" step="0.1" min="0" max="1100" name="pressure" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>