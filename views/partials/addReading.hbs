<form class="ui segment equal width form" action="/stations/{{id}}/addReading" method="POST">
    <h3 class="ui dividing header">Add new Reading</h3>
    <div class="three fields">
        <div class="field">
            <label>Code</label>
            <select class="ui fluid dropdown" name="code">
                <option value="800">800:Clear</option>
                <option value="801">801:Partial clouds</option>
                <option value="802">802:Cloudy</option>
                <option value="300">300:Light Showers</option>
                <option value="302">302:Heavy Showers</option>
                <option value="500">500:Rain</option>
                <option value="600">600:Snow</option>
                <option value="200">200:Thunder</option>
            </select>
        </div>
        <div class="field">
            <label>Temperature (<span>&#176;</span>C)</label>
            <input placeholder="Temperature" type="number" step="0.01" min="-50" max="70" name="temperature" required>
        </div>
        <div class="field">
            <label>Wind Speed (km/hr)</label>
            <input placeholder="Wind Speed" type="number" step="0.01" min="0" max="117" name="windSpeed" required>
        </div>
    </div>
    <div class="two fields">
        <div class="field">
            <label>Wind Direction (<span>&#176;</span>)</label>
            <input placeholder="Wind Direction" type="number" step="0.01" min="0" max="360" name="windDirection"
                   required>
        </div>
        <div class="field">
            <label>Pressure (mbar)</label>
            <input placeholder="Pressure" type="number" step="0.01" min="0" max="1100" name="pressure" required>
        </div>
    </div>
    <button class="ui blue submit button">Add Reading</button>
</form>

<form action="/stations/{{id}}/addReport" method="POST">
    <button class="ui red button">
        Auto Generate Reading
    </button>
</form>